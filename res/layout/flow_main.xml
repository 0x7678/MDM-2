            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="wifi下载"
            android:textSize="19dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
